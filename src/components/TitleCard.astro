---
const { post } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<li class="relative w-full md:w-[calc(100%-0.5rem)]">
    <a href={post.data.url ?? `${base + "/blog/" + post.slug}/`} class="no-underline">
        <img src={ base + post.data.banner } class="w-full h-auto object-cover">
        <div class="absolute bottom-0 right-0 bg-slate-900 bg-opacity-50 w-full rounded-b-lg">
            <p class="text-white text-2xl font-bold py-2 px-4 text-right mb-0">{post.data.title}</p>
        </div>
    </a>
</li>