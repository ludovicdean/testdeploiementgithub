---
import { Icon } from "astro-icon/components";
import { LINKEDIN_LINK, GITHUB_LINK } from "../consts";
const { context } = Astro.props;
---

<a
    href={LINKEDIN_LINK}
    class="no-underline hover:transition-all duration-50 text-white hover:text-yellow-400"
>
    <Icon name="linkedin" class="size-12" />
</a>

{
    context == "footer" && (
        <a
            href={GITHUB_LINK}
            class="no-underline hover:transition-all duration-50 text-white hover:text-yellow-400"
        >
            <Icon name="github" class="size-12" />
        </a>
    )
}
